{
  "builds": [
    {
      "src": "profile_scoring/wsgi.py",
      "use": "@vercel/python",
      "config": { "runtime": "python-3.11" }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/"
    },
    {
      "src": "/(.*)",
      "dest": "profile_scoring/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "profile_scoring.settings",
    "PYTHON_VERSION": "3.11",
    "USE_REMOTE_DB": "True"
  },
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
}