{
  "builds": [
    {
      "src": "profile_scoring/wsgi.py",
      "use": "@vercel/python",
      "config": { "runtime": "python-3.11" }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/"
    },
    {
      "src": "/(.*)",
      "dest": "profile_scoring/wsgi.py"
    }
  ],
  "ignore": [
    "media/**",
    "scoring/static/large_folder/**"  # Adjust based on your structure
  ],
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
}